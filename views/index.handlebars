<div class="container backgroundImage">
    <div class="row">
        <div class="col-2">
            <br>
        </div>
    <div class="col-8 main-title center text-center">
        <h1>Eat Da Burger</h1>
    </div>
        <div class="col-2">
            <br>
        </div>
    </div>
<br>
<br>
    <div class = "row">
        <div class="col-12 col-md-5 title bg-secondary rounded">
            <h3>Burgers</h3>  
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgerDisplay devour=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-12 col-md-2">
            <br>
        </div>
        <div class="col-12 col-md-5 title bg-secondary rounded">

            <h3>What's Been Eaten?</h3>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgerDisplay devour=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
<br>
<br>
    <div class="row">
        <div class="col-12 col-md-4">
            <br>
        </div>
        <div class="col-12 col-md-4 title bg-secondary rounded p-3">
            <h3>Add a Burger</h3>
            <form class="createBurger">
            <div class="form-group">
                <label for="burgerName">Burger:</label>
                <input type="text" id="burgerName" name="burgerName">
            </div>
            <button type="submit" class= "btn btn-success">Add Your Burger</button>
            </form>
        </div>
        <div class="col-12 col-md-4">
            <br>
        </div>
    </div>
</div>